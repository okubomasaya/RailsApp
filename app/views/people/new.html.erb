<h1 class="display-4 text-primary">People#new</h1>
<p><%= @msg %></p>
<%= form_with model: @person,local:true do |f| %>
  <div class="form-group">
    <%= f.label :Name %>
    <%= f.text_field :name, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Age %>
    <%= f.text_field :age, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Mail %>
    <%= f.text_field :mail, class:'form-control' %>
  </div>
  <%= f.submit clss:'btn btn-primary' %>
<% end %>